
<div class="block-activity-filter closed">
  <div class="filter-handle{{#if query.with}} has{{/if}}">
    <button class="toggle-activities-drawer-action action"><i></i>{{#__}}Filter by Activity{{/__}}</button>
    <button class="clear-activities-action action">{{#__}}Clear{{/__}}</button>
    <button class="close-drawer-action action">{{#__}}Close{{/__}}</button>
  </div>
  <ul class="filter-drawer{{#unless query.with}} has{{/unless}}" style="color:white;">
    {{#each activities}}
    <li>
      <button class="toggle-activity-action action {{#if filterState}}selected{{/if}}" data-filter="{{@key}}">
        <div class="activity-icon-container {{category}}"><img src="/style/activity-{{#removeSpaces}}{{@key}}{{/removeSpaces}}.svg"></div>
        <label>{{label}}</label>
      </button>
    </li>
    {{/each}}
  </ul>
</div>

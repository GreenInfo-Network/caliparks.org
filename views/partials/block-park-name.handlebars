<div class="block-park-name">
  <div class="park-name"><a href="/park/{{superunit_id}}">{{unit_name}}</a> <span class="distance">{{#if distance}}{{#pluralize}}{{distance}} mile|miles{{/pluralize}}{{/if}}</span></div>
  {{#if activity}}
  <ul class="block-activity-icons">
    {{#each activity.items}}
    {{#if id}}
    <li style="background-image:url('/style/activity-{{#removeSpaces}}{{id}}{{/removeSpaces}}.svg');" title="{{#__}}This park has {{name}}{{/__}}" class="{{category}}" onclick="location.href='/parks/with/{{id}}';">{{name}}</li>
    {{/if}}
    {{/each}}
  </ul>
  {{/if}}
</div>

{{#if has_foursquare}}
<div id="foursquare-stats">
  <h2>People are checking in on Foursquare</h2>
  <table>
    <tbody>
      <tr><td>{{venues_count}}</td><td>{{venues_checkins}}</td><td>{{venues_tips}}</td></tr>
    </tbody>
    <tfoot>
      <tr><td>Venues</td><td>Check ins</td><td>Tips</td></tr>
    </tfoot>
  </table>
</div>
{{/if}}
<script>
"use strict";
var locationParts = location.href.split('/');
if (locationParts[4] === 'near' && !locationParts[5]) {
  document.addEventListener('DOMContentLoaded', function() {document.querySelector('.search-results').innerHTML = '<div style="margin-left: 45px;">Finding you...</div>';});

  navigator.geolocation.getCurrentPosition(function(l) {
    location.href='/parks/near/'+l.coords.latitude+','+l.coords.longitude + "?home=true";
  },
  function() {
    location.href='/parks/near/37.7484,-122.4156';
  });
}
</script>

<div id="content" class="template-{{view}}">
  {{>block-search-box}}
  <div class="search-state">
    {{#if story}}
    {{story}}
    {{else}}
    {{#if query.with}}
    {{total}} parks with {{#formatActivityList}}{{query.with}}{{/formatActivityList}}
    {{else}}
      {{#if query.near}}
      {{#__}}The {{total}} parks nearest to {{/__}}
      {{#if homeLocation}}
      {{#__}}you{{/__}}
      {{else}}
      {{#replace item="+" with=" "}}{{query.near}}{{/replace}}
      {{/if}}
      {{/if}}
      {{/if}}
    {{/if}}
  </div>
  <div class="action-bar">
    {{>block-activity-filter}}
  </div>

  <div class="tab-actions">
    <button class="list" data-action="list">{{#__}}List{{/__}}</button>
    <button class="map" data-action="map">{{#__}}Map{{/__}}</button>
  </div>

  <div class="tab-pane list-tab-pane">
    <ul class="search-results">


      {{#paginationLast}}<div class="pagination-container"><a href="#" class="action">{{#__}}Go back a bit{{/__}}</a></div>{{/paginationLast}}

      {{#each parks}}
        <li data-id="{{superunit_id}}" class="search-result result-{{superunit_id}}">{{>block-park-name}}</li>
      {{else}}
        <p class="no-results">{{#__}}Having trouble finding a park? <a href="/wander">Here's one</a>{{/__}}.</p>
      {{/each}}

      {{#if total}}
        {{#paginationNext}}<div class="pagination-container"><a href="#" class="action">{{#__}}More Parks!{{/__}}</a></div>{{/paginationNext}}
      {{/if}}
    </ul>
  </div>
  <div class="tab-pane map-tab-pane" style="height:100%;">
    <div class="slippymap" style="width: 100%; height: 100.1%;"></div>
    <button class="action active search-this-area-action">{{#__}}Search this area{{/__}}</button>
  </div>
</div>
<script>
var viewData = {
  "parks"        : {{#json}}{{{parksGeoJSON}}}{{/json}},
  "total"        : {{total}},
  "startat"      : {{startat}},
  "perpage"      : {{perpage}},
  "bounds"       : [{{bounds}}]
}
</script>
